<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/xf_common_grey" />
            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item android:bottom="1dp" android:left="1dp" android:right="1dp">
        <shape>
            <solid android:color="@color/xf_common_white" />
            <corners android:bottomLeftRadius="3dp" android:bottomRightRadius="3dp" />
        </shape>
    </item>
</layer-list>