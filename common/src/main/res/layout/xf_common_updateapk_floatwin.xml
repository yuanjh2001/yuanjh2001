<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="272dp"
        android:layout_height="130dp"
        android:background="@drawable/xf_common_dialog_bg">

        <TextView
            android:id="@+id/update_tip_id"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:gravity="center"
            android:text="有新版本，是否更新？"
            android:textColor="@color/xf_common_news_text_title_color"
            android:textSize="@dimen/xf_common_game_text_title_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/install_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xf_common_radiobtnbg_left"
                android:button="@null"
                android:text="更新"
                android:textColor="@color/xf_common_new_game_text_blue"
                android:textSize="@dimen/xf_common_game_text_title_size" />

            <Button
                android:id="@+id/close_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/xf_common_radiobtnbg_right"
                android:button="@null"
                android:text="取消"
                android:textColor="@color/xf_common_new_game_text_blue"
                android:textSize="@dimen/xf_common_game_text_title_size" />
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>