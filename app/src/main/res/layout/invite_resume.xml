<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:theme="@style/myTransparent"
    >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="247dp"
    android:background="@drawable/corners_invite_popwindow_bg"
    android:layout_marginTop="30dp"
    >
<RelativeLayout
        android:id="@+id/invite_resume"
        android:layout_width="wrap_content"
        android:layout_height="247dp"
        android:orientation="vertical"
        android:paddingTop="51dp">
        <!--头像和简介-->
        <LinearLayout
            android:id="@+id/head_resume"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp">

            <ImageView
                android:layout_width="75dip"
                android:layout_height="84dip"
                android:src="@mipmap/girl" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="Avril Lavigne"
                        android:textColor="@color/getcode_txt"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/ic_find_credits" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dip"
                    android:layout_marginTop="2dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4KM"
                        android:textColor="@color/tips_txt"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01-02"
                        android:textColor="@color/tips_txt"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13:00"
                        android:textColor="@color/tips_txt"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_address"
                        android:textColor="@color/tips_txt"
                        android:textSize="12sp" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">

                    <TextView
                        android:id="@+id/party_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AA"
                        android:textColor="@color/getcode_txt"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/party_type"
                        android:text="1/4"
                        android:textColor="@color/getcode_txt"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/sex_layout"
                        android:layout_width="16dip"
                        android:layout_height="16dip"
                        android:layout_toLeftOf="@+id/invite_type"
                        android:background="@drawable/man_bg"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tpl_boy"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/invite_type"
                        android:layout_width="16dip"
                        android:layout_height="16dip"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/invite_bg"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yao"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <!--邀请或者邀约内容简介，例如集体观影，品美食-->
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head_resume"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/default_party_resume"
                android:textColor="@color/getcode_txt"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <!--发起邀约、查看详情按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/button_layout"
            android:background="@color/me_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/button_layout"
            android:background="@color/button_bg">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="49dip"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/toinvite"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/me_line" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="49dip"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/detail_info"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/pic_find_map_popup_tab_bar"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        />
</RelativeLayout>
