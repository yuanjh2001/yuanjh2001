<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.happynetwork.vrestate.activitys.MainActivity">

    <RelativeLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/bottom_nav_h" />

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <View
            android:id="@+id/line_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_h"
            android:background="@color/xf_common_bg_titlebar" />
        <ImageView
            android:layout_below="@+id/line_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_nav_h"
            android:scaleType="fitXY"
            android:src="@drawable/pic_tabbar_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_nav_h"
            android:background="@color/xf_common_bg_titlebar"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_find"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tab_find" />

                <TextView
                    android:id="@+id/tv_find"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_find"
                    android:textColor="@color/bottom_tv"
                    android:textSize="@dimen/bottom_tv" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tab_find" />

                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_share"
                    android:textColor="@color/bottom_tv"
                    android:textSize="@dimen/bottom_tv" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ser"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_ser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tab_find" />

                <TextView
                    android:id="@+id/tv_ser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_service"
                    android:textColor="@color/bottom_tv"
                    android:textSize="@dimen/bottom_tv" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_msg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tab_find" />

                <TextView
                    android:id="@+id/tv_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_message"
                    android:textColor="@color/bottom_tv"
                    android:textSize="@dimen/bottom_tv" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_me"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tab_find" />

                <TextView
                    android:id="@+id/tv_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_me"
                    android:textColor="@color/bottom_tv"
                    android:textSize="@dimen/bottom_tv" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
