<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical" >
  <include layout="@layout/common_white_title" android:id="@+id/common_title"/>
  <RelativeLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center"
      android:layout_marginTop="10dip"
      android:paddingBottom="15dip"
      android:background="#ffffff"
      >
      <ImageView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@mipmap/social_edit_groupinfo"
          android:id="@+id/social_edit_groupinfo"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          android:layout_marginTop="15dip"
          android:layout_marginRight="23dip"
          />
      <ImageView 
          android:layout_width="65dip"
          android:layout_height="65dip"
          android:src="@mipmap/default_icon"
          android:id="@+id/group_icon"
          android:layout_marginTop="15dip"
          android:layout_marginBottom="15dip"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          />
      <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center"
          android:layout_below="@+id/group_icon"
          android:id="@+id/group_id_layout"
          >
          <TextView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/group_num"
              android:textColor="#333333"
              android:textSize="14sp"
              />
          <TextView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="223311"
              android:textColor="#333333"
              android:textSize="14sp"
              android:id="@+id/group_id"
              />
      </LinearLayout>
      <TextView 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="@string/default_food_des"
          android:id="@+id/group_des"
          android:layout_marginLeft="10dip"
          android:layout_marginRight="10dip"
          android:layout_below="@+id/group_id_layout"
          />
      
  </RelativeLayout>
  <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginTop="10dip"
      android:background="#ffffff"
      >
      <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="48dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:id="@+id/group_detail_layout"
    >
    <TextView 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentLeft="true"
    	android:text="@string/group_number"
    	android:layout_centerVertical="true"
    	android:textSize="16sp"
    	android:textColor="#333333"
    	android:textStyle="bold"
        />
    <ImageView 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        android:src="@mipmap/neighbor_title_arrow_right"
        android:id="@+id/ktv_title_arrow_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
    <TextView 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="@string/more_content"
    	android:layout_toLeftOf="@+id/ktv_title_arrow_right"
    	android:textSize="11sp"
    	android:textColor="#999999"
    	android:layout_centerVertical="true"
        />
</RelativeLayout>
<LinearLayout 
    android:layout_width="match_parent"
	android:layout_height="0.5dip"
    android:background="#dddddd"
    />
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="97dip"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    >
    <GridView 
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:id="@+id/group_number"
        android:numColumns="4"
        android:horizontalSpacing="2dip"
        />
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/social_addgroupnumber"
        android:id="@+id/add_groupnumber"
        android:layout_gravity="top"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="5dip"
        />
</LinearLayout>

  </LinearLayout>
  <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_marginTop="10dip"
    >
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification_prevent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/social_close"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/notification_prevent"
            />
    </RelativeLayout>
    <LinearLayout 
    android:layout_width="match_parent"
	android:layout_height="0.5dip"
    android:background="#dddddd"
    />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:paddingLeft="10dip"
         >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/Empty_the_chat_record"
            />
        
    </RelativeLayout>
	</LinearLayout>
	<FrameLayout 
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
	    >
	    <ImageView 
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:src="@mipmap/button_login_register"
	    android:id="@+id/add_group"
	    android:layout_gravity="center_horizontal"
	    />
	    <TextView 
	        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/join_group"
            android:layout_gravity="center"
            android:textColor="#ffffff"
	        />
	</FrameLayout>
	
</LinearLayout>
